{
  "name": "topas",
  "version": "0.1.0",
  "description": "Pen and Paper tool for 'the dark eye'",
  "author": "",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "dependencies": {
    "@fortawesome/fontawesome": "1.1.8",
    "@fortawesome/fontawesome-free-solid": "5.0.13",
    "@fortawesome/fontawesome-svg-core": "1.2.4",
    "@fortawesome/free-brands-svg-icons": "5.3.1",
    "@fortawesome/free-regular-svg-icons": "5.3.1",
    "@fortawesome/free-solid-svg-icons": "5.3.1",
    "@fortawesome/react-fontawesome": "0.1.3",
    "bootstrap": "4.1.3",
    "electron-is-dev": "1.0.1",
    "jquery": "3.3.1",
    "lodash": "4.17.11",
    "moment": "2.22.2",
    "popper.js": "1.14.4",
    "prop-types": "15.6.2",
    "react": "16.5.2",
    "react-dom": "16.5.2",
    "react-scripts": "2.0.2",
    "xml-printer": "1.1.3",
    "xml-reader": "2.4.3"
  },
  "devDependencies": {
    "concurrently": "4.0.1",
    "electron": "3.0.2",
    "electron-builder": "20.28.4",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-config-prettier": "3.1.0",
    "eslint-config-react": "1.1.7",
    "eslint-config-react-app": "3.0.2",
    "eslint-plugin-flowtype": "2.50.3",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jsx-a11y": "6.1.1",
    "eslint-plugin-prettier": "3.0.0",
    "eslint-plugin-react": "7.11.1",
    "jest-fetch-mock": "1.6.6",
    "prettier": "1.14.3",
    "react-testing-library": "5.1.0",
    "wait-on": "3.0.1"
  },
  "scripts": {
    "start": "PORT=3000 react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "test:coverage": "npm test -- --coverage",
    "eject": "react-scripts eject",
    "electron:dev": "concurrently \"BROWSER=none npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:dev:win": "set ELECTRON_START_URL=http://localhost:3000 && electron .",
    "preelectron:pack": "npm run build",
    "electron:pack:linux": "electron-builder -l",
    "electron:pack:mac": "electron-builder -m",
    "electron:pack:win": "electron-builder -w",
    "electron:pack": "npm run electron:pack:linux && npm run electron:pack:mac && npm run electron:pack:win"
  },
  "build": {
    "appId": "com.electron.topas",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "linux": {
      "target": "zip"
    },
    "mac": {
      "target": "zip",
      "category": "public.app-category.games"
    },
    "win": {
      "target": "zip"
    }
  },
  "browserslist": [
    "last 1 Electron versions"
  ]
}
